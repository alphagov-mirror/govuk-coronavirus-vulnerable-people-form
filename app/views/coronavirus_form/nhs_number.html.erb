<% content_for :title do %><%= t("coronavirus_form.questions.nhs_number.title") %><% end %>
    <% content_for :meta_tags do %>
      <meta name="description" content="<%= t("coronavirus_form.questions.nhs_number.title") %>" />
      <%# stop iOS treating the NHS number as a phone number %>
      <meta name="format-detection" content="telephone=no" />
    <% end %>

    <% content_for :back_link do %>
      <%= render "govuk_publishing_components/components/back_link", { href: previous_path } %>
    <% end %>

    <%= form_tag({},
      "data-module": "track-coronavirus-form-vulnerable-people-nhs-number",
      "data-question-key": "nhs_number",
      "novalidate": "true"
    ) do %>

    <%= render "govuk_publishing_components/components/title", {
      title: t("coronavirus_form.questions.nhs_number.title"),
      margin_top: 0,
      margin_bottom: 3,
    } %>

    <%= sanitize(t("coronavirus_form.questions.nhs_number.hint")) %>

    <%= render "govuk_publishing_components/components/input", {
      "id": "nhs_number",
      name: "nhs_number",
      label: {
        text: t("coronavirus_form.questions.nhs_number.nhs_number.label"),
      },
      type: "number",
      error_message: error_items('nhs_number'),
      value: @form_responses[:nhs_number],
      width: 10,
    } %>

    <%= render "govuk_publishing_components/components/details", {
      title: t("coronavirus_form.questions.nhs_number.details.title"),
    } do %>
      <%= sanitize(t("coronavirus_form.questions.nhs_number.details.description")) %>
    <% end %>

    <%= render "govuk_publishing_components/components/button", text: t("coronavirus_form.submit_and_next"), margin_bottom: true %>
<% end %>
